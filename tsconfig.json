{
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "jest.config.js"],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "src",
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": true,

    "removeComments": false,

    "incremental": true,
    "sourceMap": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,

    "module": "commonjs",
    "target": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"]
  }
}
